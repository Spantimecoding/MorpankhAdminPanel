<!DOCTYPE html>
<html lang="en">
<head>
        <link href="/css/allProducts.css" rel="stylesheet">
        <%- include("../../partials/links") %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
        <script>
        localStorage.setItem("display","<%=display%>")
        console.log(localStorage.getItem("display"))
        </script>
        <%- include("../../partials/adminNav") %>
        <div class="products-layout">
                <div class="search-and-add">
                        <div class="search-box">
                                <label for="search" id="search"><i data-lucide="search" class="search-icon"></i></label>
                                <input type="text" id="searchBox" placeholder="Enter Search Query">
                        </div>
                        <div class="item-count"></div>
                        <button class="compact"id="barcode-print"><i data-lucide="printer" class="add-icon" style="margin: auto;"></i></button>
                         <button class="compact"><i data-lucide="grid-3x3" class="add-icon" style="margin: auto;"></i></button>


                        <button class="compact"><a href="/admin/products/add" class="add-anchor"><i data-lucide="file-plus-corner" class="add-icon" style="position: relative; left: 4px;"></i></a></button>
                </div>
                  <%if(data.length == 0){%>
                <div class="empty-msg">
                        <p><i data-lucide="circle-x" class="empty-icon"></i>No Existing Products Found</p>
                        </div>
                        <%}%>
                <div class="product-grid">
                         <% for(let i = data.length - 1; i >= 0; i--){ 
                                const x = data[i]%>
                                <a href="/admin/products/edit/<%=x.id%>" class="product-grid-item">
                                        <img src="<%=x.images[0]%>" class="product_image">
                                        <div class="product-text-info">
                                                <div class="product-text-info-item" id="item-name" style="background-color: white;"><span class="txt-head"><%=x.name%></span></div>
                                                <div class="product-text-info-item" id="item-price" style="font-size: var(--space-xxl); background-color: white; color:var(--clr-txt-head); margin-top: -10px;">â‚¹ <%=x.price%></div>
                                                <div class="info-row">
                                                        <div class="product-text-info-item" id = "item-category"></i><%=x.category%></div>
                                                        <div class="product-text-info-item" id = "item-stock"></i>Stk : <%=x.stock%></div>
                                                        <div class="product-text-info-item" id = "item-material"></i><%=x.material%></div>
                                                </div>
                                        </div>
                                </a>
                         <% } %>
                        
                </div>
                <div class="pg-grp"><span class="pg-grp-bt" id="prev"><i data-lucide="move-left" class="icon"></i> Previous Page</span><span></span><span class="page-num">1</span><span class="pg-grp-bt" id="next">Next Page <i data-lucide="move-right" class="icon"></i></span></div>

        </div>
       

    <script>
        console.log("hello")
        window.dataset = <%- JSON.stringify(data) %>;
    </script>
    <script>
        lucide.createIcons();
    </script>
    <script src="/js/allProducts.js"></script>
</body>
</html>