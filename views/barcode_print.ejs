<!DOCTYPE html>
<html>
<head>
  <style>
    .page {
        display: grid;
        grid-template-columns: repeat(5, 1.5in);
        grid-auto-rows: 0.8in;
        gap: 0.5in;
        margin: 0.1in   ;
        page-break-after: always;
      }
       .barcode {
          width: 3.5cm;
            height: 0.8in;
            overflow: hidden;
            display: flex;
            align-items: center;
            border: 1px solid black;
            padding: 0.3mm 2mm;
            justify-content: center;
      }
      
      body {
        margin: 0;
      }



      .barcode img {
        width: 100%;
      }
    @media print {

      @page {
        size: A4;
        margin: 0.09in;
      }

    }
  </style>
</head>
<body>

<%
  const perPage = 40;
  for (let i = 0; i < products.length; i += perPage) {
%>

  <div class="page">
    <% products.slice(i, i + perPage).forEach(product => { %>
      <div class="barcode">
        <img src="/admin/products/regenerate/<%= product.barcode %>">
      </div>
    <% }) %>
  </div>

<% } %>
<script>
    window.print()
    </script>



</body>
</html>
